<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#B5DD98A0" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="#DE2129"
                android:centerColor="#611C3C"
                android:endColor="#1D1946"
                android:angle="270"/>
            <corners android:radius="@dimen/_20sdp"/>
        </shape>
    </item>
</layer-list>